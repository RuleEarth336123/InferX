{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/server/qwen2",
            "args": [ // 这里添加你的命令行参数
            "/mnt/d/linux/models/qwen2/Qwen2.5-0.5B.bin",
            "/mnt/d/linux/models/qwen2/Qwen2.5-0.5B/tokenizer.json"
            ],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}/build/server",
            "preLaunchTask": "compile", //在调试前会先调用这个task编译构建程序
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}